<%- include('../partials/header', { title: 'Edit Product', user: user }) %>

<h2 class="mb-3">Edit Product</h2>

<form action="/products/edit/<%= product._id %>" method="POST" class="w-50">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" name="name" value="<%= product.name %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Price</label>
    <input type="number" class="form-control" name="price" value="<%= product.price %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Quantity</label>
    <input type="number" class="form-control" name="quantity" value="<%= product.quantity %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Supplier</label>
    <select class="form-select" name="supplierId" required>
      <% suppliers.forEach(s => { %>
      <option value="<%= s._id %>" <%= product.supplierId.equals(s._id) ? 'selected' : '' %>><%= s.name %></option>
      <% }) %>
    </select>
  </div>
  <button type="submit" class="btn btn-success">Update</button>
  <a href="/products" class="btn btn-secondary">Cancel</a>
</form>

<%- include('../partials/footer') %>