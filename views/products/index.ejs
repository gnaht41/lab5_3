<%- include('../partials/header', { title: 'Products', user: user }) %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h2>Products</h2>
  <% if (user) { %>
  <a class="btn btn-primary" href="/products/create">Add Product</a>
  <% } %>
</div>

<table class="table table-striped table-bordered">
  <thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Supplier</th>
      <% if (user) { %><th>Actions</th><% } %>
    </tr>
  </thead>
  <tbody>
    <% products.forEach(p => { %>
    <tr>
      <td><%= p.name %></td>
      <td><%= p.price %></td>
      <td><%= p.quantity %></td>
      <td><%= p.supplierId ? p.supplierId.name : 'N/A' %></td>
      <% if (user) { %>
      <td>
        <a class="btn btn-sm btn-warning me-2" href="/products/edit/<%= p._id %>">Edit</a>
        <form action="/products/delete/<%= p._id %>" method="POST" style="display:inline;">
          <button class="btn btn-sm btn-danger" type="submit">Delete</button>
        </form>
      </td>
      <% } %>
    </tr>
    <% }) %>
  </tbody>
</table>

<%- include('../partials/footer') %>