<%- include('../partials/header', { title: 'Edit Supplier' }) %>

<h2 class="mb-3">Edit Supplier</h2>

<form action="/suppliers/edit/<%= supplier._id %>" method="POST" class="w-50">
  <div class="mb-3">
    <label class="form-label">Name</label>
    <input type="text" class="form-control" name="name" value="<%= supplier.name %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Address</label>
    <input type="text" class="form-control" name="address" value="<%= supplier.address %>">
  </div>
  <div class="mb-3">
    <label class="form-label">Phone</label>
    <input type="text" class="form-control" name="phone" value="<%= supplier.phone %>">
  </div>
  <button type="submit" class="btn btn-success">Update</button>
  <a href="/suppliers" class="btn btn-secondary">Cancel</a>
</form>

<%- include('../partials/footer') %>